{
	"compilerOptions": {
	  "target": "es2016",
	  "lib": ["dom", "dom.iterable", "esnext"],
	  "allowJs": true,
	  "skipLibCheck": true,
	  "esModuleInterop": true,
	  "allowSyntheticDefaultImports": true,
	  "strict": true,
	  "forceConsistentCasingInFileNames": true,
	  "module": "esnext", // 🔥 Проверяем, если ошибка связана с модулем
	  "moduleResolution": "node",
	  "resolveJsonModule": true,
	  "isolatedModules": true,
	  "jsx": "react-jsx", // 🔥 Исправлено для TypeScript 5.7+
	  "baseUrl": "src"
	},
	"include": ["src"]
  }
  